<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane fx:controller="MainWindowController"
            xmlns:fx="http://javafx.com/fxml">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <top>
        <HBox spacing="10" alignment="CENTER">
            <Button text="prev"/>
            <TextField fx:id="date"/>
            <Button text="next"/>
        </HBox>
    </top>


    <center>
        <TextArea fx:id="label" editable="false" BorderPane.alignment="CENTER"
               onMouseClicked="#showList"/>
    </center>

    <bottom>
        <VBox>
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="product" promptText="product"/>
                <TextField fx:id="proteins" promptText="proteins"/>
                <TextField fx:id="lipids" promptText="lipids"/>
                <TextField fx:id="carbs" promptText="carbs"/>
                <TextField fx:id="kcal" promptText="kcal"/>
                <TextField fx:id="weight" promptText="weight"/>
                <Button fx:id="addBtn"
                        text="+"
                        onAction="#handleSubmitButtonAction"/>
            </HBox>
            <HBox>
                <Label fx:id="statusBar"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>

